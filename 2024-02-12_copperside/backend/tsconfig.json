{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true
  },
  "typeRoots": ["./node_modules/@types"],
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**/*", "src/db/**/*.ts"]
}
